<UserControl x:Class="TicTacToeDesktopApp.Controls.Square"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TicTacToeDesktopApp.Controls"
             mc:Ignorable="d"
             Name="Control">
    <Button Content="{Binding ElementName=Control, Path=Value}"
            CommandParameter="{Binding ElementName=Control, Path=Index}"
            Command="{Binding ElementName=Control, Path=OnClick}"
            Width="34"
            Height="34" />
</UserControl>
